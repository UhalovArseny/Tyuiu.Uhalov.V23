@rendermode InteractiveServer
@page "/tours/{id:guid}"
@attribute [Authorize]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using VirtualMuseum.Models
@using VirtualMuseum.Services
@using Track3.Components.Data
@using Track3.Components.Models

@inject ITourService TourService
@inject AppDbContext Db
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<h3>Детали тура</h3>

@if (loading)
{
    <p>Загрузка тура...</p>
}
else if (tour == null)
{
    <p>Тур не найден.</p>
    <a href="/tours">← Назад</a>
}
else
{
    <div class="tour-details">

        <h2>@tour.Title</h2>

        @if (!string.IsNullOrWhiteSpace(tour.Description))
        {
            <p class="tour-desc">@tour.Description</p>
        }

        <div class="tour-meta">
            @if (tour.StartTimeUtc.HasValue)
            {
                <div>
                    <b>Начало:</b>
                    @tour.StartTimeUtc.Value.ToLocalTime().ToString("f")
                </div>
            }

            <div>
                <b>Длительность:</b> @tour.DurationMinutes мин
            </div>
        </div>

        <div class="visit-status" style="margin-top: 1rem;">
            @if (visited)
            {
                <span class="visited-badge">Вы уже проходили этот тур ✅</span>
            }
            else
            {
                <button class="visit-button" @onclick="MarkVisited">
                    Отметить как посещённый
                </button>
            }
        </div>

        @if (!string.IsNullOrWhiteSpace(visitToast))
        {
            <div class="toast-popup">@visitToast</div>
        }

        <hr />

        <button class="tour-button-danger" @onclick="DeleteTour">
            Удалить тур
        </button>

        <br />
        <a href="/tours" class="back-link">← Назад к списку туров</a>
    </div>
}

@code {
    [Parameter] public Guid id { get; set; }

    private Tour? tour;
    private bool loading = true;
    private bool visited;
    private string? visitToast;

    protected override async Task OnInitializedAsync()
    {
        tour = await TourService.GetAsync(id);
        await LoadVisitedAsync();
        loading = false;
    }

    private async Task LoadVisitedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        var uidStr = user.FindFirst("uid")?.Value;
        if (!int.TryParse(uidStr, out var uid) || tour == null)
            return;

        visited = await Db.VisitedTours
            .AnyAsync(v => v.UserId == uid && v.TourId == tour.Id);
    }

    private async Task MarkVisited()
    {
        if (tour == null)
            return;

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        var uidStr = user.FindFirst("uid")?.Value;
        if (!int.TryParse(uidStr, out var uid))
            return;

        var exists = await Db.VisitedTours
            .AnyAsync(v => v.UserId == uid && v.TourId == tour.Id);

        if (!exists)
        {
            Db.VisitedTours.Add(new VisitedTour
            {
                UserId = uid,
                TourId = tour.Id,
                VisitedAtUtc = DateTime.UtcNow
            });

            await Db.SaveChangesAsync();
        }

        visited = true;

        visitToast = "Тур добавлен в посещённые ✅";
        StateHasChanged();

        await Task.Delay(1500);
        visitToast = null;
        StateHasChanged();
    }

    private async Task DeleteTour()
    {
        if (tour == null)
            return;

        await TourService.DeleteAsync(tour.Id);
        Nav.NavigateTo("/tours");
    }
}
